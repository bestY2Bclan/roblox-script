local KEY_URL = "https://pastebin.com/raw/i1ZSqKcn"
local DISCORD_INVITE = "https://discord.gg/KWKyYSKFhP"

local passwordAccepted = false

-- clipboard helper
local function copyToClipboard(text)
    local ok = false
    pcall(function()
        if setclipboard then
            setclipboard(text)
            ok = true
        elseif toclipboard then
            toclipboard(text)
            ok = true
        end
    end)
    return ok
end

-- KEY VALIDATION: ONLY Pastebin
local function validateKey(inputKey)
    -- FIX: use :HttpGet instead of game.HttpGet
    local ok, body = pcall(function()
        return game:HttpGet(KEY_URL)
    end)
    if not ok or not body or body == "" then
        return false, "Key server error. Try again."
    end

    inputKey = tostring(inputKey or ""):gsub("%s+", "")
    if inputKey == "" then
        return false, "Enter a key first."
    end

    for line in string.gmatch(body, "[^\r\n]+") do
        local trimmed = line:gsub("%s+", "")
        if trimmed ~= "" and trimmed == inputKey then
            return true, "Key accepted."
        end
    end

    return false, "Invalid key. Get a valid key from the Discord."
end

