local RedTint = Instance.new("Frame")
RedTint.Size = UDim2.new(1, 0, 1, 0)
RedTint.Position = UDim2.new(0, 0, 0, 0)
RedTint.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
RedTint.BackgroundTransparency = 1
RedTint.BorderSizePixel = 0
RedTint.ZIndex = 19
RedTint.Parent = PasswordGui

local function screenShake(intensity, duration)
    local start = tick()
    local basePos = PassFrame.Position
    while tick() - start < duration and not passwordAccepted do
        local offsetX = (math.random() - 0.5) * 2 * intensity
        local offsetY = (math.random() - 0.5) * 2 * intensity
        PassFrame.Position = basePos + UDim2.new(0, offsetX, 0, offsetY)
        task.wait(0.02)
    end
    PassFrame.Position = basePos
end

local function thunderStrike()
    if passwordAccepted then return end

    local useRed = (math.random() < 0.4)
    if useRed then
        RedTint.BackgroundTransparency = 0.6
        Flash.BackgroundTransparency = 0.85
    else
        RedTint.BackgroundTransparency = 1
        Flash.BackgroundTransparency = 0.3
    end

    TweenService:Create(
        Flash,
        TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        { BackgroundTransparency = 1 }
    ):Play()

    if useRed then
        TweenService:Create(
            RedTint,
            TweenInfo.new(0.25, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
            { BackgroundTransparency = 1 }
        ):Play()
    end

    task.spawn(function()
        screenShake(6, 0.25)
    end)
end

task.spawn(function()
    while not passwordAccepted and PasswordGui.Parent do
        local waitTime = 2 + math.random() * 4
        task.wait(waitTime)
        if passwordAccepted or not PasswordGui.Parent then break end

        local bursts = math.random(1, 2)
        for _ = 1, bursts do
            thunderStrike()
            task.wait(0.18 + math.random() * 0.1)
        end
    end
end)

local function acceptPassword()
    passwordAccepted = true
    PassStatus.Text = "Gate unlocked."

    local fadeTime = 0.5

    TweenService:Create(
        PassFrame,
        TweenInfo.new(fadeTime, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        { BackgroundTransparency = 1 }
    ):Play()
    TweenService:Create(PassStroke, TweenInfo.new(fadeTime), { Transparency = 1 }):Play()
    TweenService:Create(InnerGlow, TweenInfo.new(fadeTime), { ImageTransparency = 1 }):Play()

    for _, v in ipairs(PassFrame:GetDescendants()) do
        if v:IsA("TextLabel") or v:IsA("TextBox") or v:IsA("TextButton") then
            TweenService:Create(
                v,
                TweenInfo.new(fadeTime),
                { TextTransparency = 1 }
            ):Play()
        end
    end

    local function fadeImages(root)
        for _, img in ipairs(root:GetDescendants()) do
            if img:IsA("ImageLabel") then
                TweenService:Create(
                    img,
                    TweenInfo.new(fadeTime),
                    { ImageTransparency = 1 }
                ):Play()
            end
        end
    end

    fadeImages(SmokeTop)
    fadeImages(SmokeBottom)

    TweenService:Create(BG, TweenInfo.new(fadeTime), { BackgroundTransparency = 1 }):Play()
    TweenService:Create(Vignette, TweenInfo.new(fadeTime), { ImageTransparency = 1 }):Play()
    TweenService:Create(Flash, TweenInfo.new(fadeTime), { BackgroundTransparency = 1 }):Play()
    TweenService:Create(RedTint, TweenInfo.new(fadeTime), { BackgroundTransparency = 1 }):Play()

    task.delay(fadeTime + 0.2, function()
        if PasswordGui then
            PasswordGui:Destroy()
        end
    end)
end

local function checkPassword()
    local input = tostring(PassBox.Text or "")
    input = input:gsub("%s+", "")

    if input == "" then
        PassStatus.Text = "Enter a key first."
        return
    end

    PassStatus.Text = "Checking key..."
    local ok, msg = validateKey(input)
    if ok then
        PassStatus.Text = msg or "Key accepted."
        acceptPassword()
    else
        PassStatus.Text = msg or "Invalid key."
        TweenService:Create(
            PassBtn,
            TweenInfo.new(0.12),
            { BackgroundColor3 = Color3.fromRGB(220, 0, 0) }
        ):Play()
        task.delay(0.25, function()
            TweenService:Create(
                PassBtn,
                TweenInfo.new(0.15),
                { BackgroundColor3 = Color3.fromRGB(200, 40, 40) }
            ):Play()
        end)
    end
end

PassBtn.MouseButton1Click:Connect(checkPassword)
PassBox.FocusLost:Connect(function(enter)
    if enter then
        checkPassword()
    end
end)

UIS.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.Return or input.KeyCode == Enum.KeyCode.KeypadEnter then
        if PassBox:IsFocused() then
            checkPassword()
        end
    end
end)

repeat task.wait(0.1) until passwordAccepted

-- SETTINGS / REMOTES
local SETTINGS_FILE = "Ys2cBript_Settings.json"

local Settings = {
    SpeedEnabled = false,
    SpeedValue = 16,
    JumpEnabled = false,
    JumpValue = 50,

    HitboxEnabled = false,
    HitboxSize = 22,
    HitboxTransparency = 0.65,

    AutoUseAll = false,
    AutoUseMelee = false,
    HitInterval = 0.15, -- will be converted to hitsPerSecond

    BarrierRemoved = false,

    AutoHealEnabled = false,
    AutoHealHP = 30,

    FollowTarget = false,
    FollowSpeed = 45,
    OrbitRadius = 5,

    ESPEnabled = false,
    AutoDragCombo = false,
    AutoProtect = false,

    FarmAllEnabled = false,
}

local canUseFiles = (writefile and readfile and isfile) and true or false

local function loadSettings()
    if not canUseFiles then return end
    if not isfile(SETTINGS_FILE) then return end

    local ok, data = pcall(readfile, SETTINGS_FILE)
    if not ok or not data or data == "" then return end

    local ok2, decoded = pcall(HttpService.JSONDecode, HttpService, data)
    if ok2 and type(decoded) == "table" then
        for k, v in pairs(decoded) do
            if Settings[k] ~= nil then
                Settings[k] = v
            end
        end
    end
end

local function saveSettings()
    if not canUseFiles then return end
    local ok, data = pcall(HttpService.JSONEncode, HttpService, Settings)
    if not ok then return end
    pcall(writefile, SETTINGS_FILE, data)
end

loadSettings()

-- Net modules / remotes
local Modules = ReplicatedStorage:WaitForChild("Modules")
local NetModules = Modules:WaitForChild("Net")

local PipeActivatedRemote = NetModules:FindFirstChild("RE/PipeActivated")
local JaladaDePeloEvent = ReplicatedStorage:FindFirstChild("JALADADEPELOEVENT")
local PunchEvent = ReplicatedStorage:FindFirstChild("PUNCHEVENT")
local StompEvent = ReplicatedStorage:FindFirstChild("STOMPEVENT")
local RequestSurgeryRF = NetModules:FindFirstChild("RF/RequestSurgery")

local tpDelay = 0.08
local frontOff = 0.7
local upOff = 2.3

-- helper: check PvP-on
local function charHasPvpOn(char)
    return char and char:FindFirstChild("hasPvpOn") ~= nil
end

-- ===== UNIFIED HIT SPEED SYSTEM =====
-- convert old HitInterval (seconds between hits) to hitsPerSecond
local hitsPerSecond = (Settings.HitInterval and Settings.HitInterval > 0)
    and math.clamp(1 / Settings.HitInterval, 1, 50)
    or 6 -- fallback default (6 hits per second)
Settings.HitInterval = 1 / hitsPerSecond

