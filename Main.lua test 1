SmokeBottom.Position = UDim2.new(-0.1, 0, 1, -140)
SmokeBottom.BackgroundTransparency = 1
SmokeBottom.ZIndex = 3
SmokeBottom.Parent = PasswordGui

local function createSmokeStrip(parent, baseY, flip)
    local textureId = "rbxassetid://5028857084"
    for i = 1, 7 do
        local img = Instance.new("ImageLabel")
        img.BackgroundTransparency = 1
        img.Image = textureId
        img.ImageColor3 = Color3.fromRGB(235, 60, 60)
        img.ImageTransparency = 0.45 + math.random() * 0.25
        img.Size = UDim2.new(0, 260 + math.random(-40, 80), 0, 140 + math.random(-10, 40))
        img.Position = UDim2.new(-0.3 + (i - 1) * 0.3, 0, 0, baseY + math.random(-10, 10))
        img.Rotation = flip and (180 + math.random(-12, 12)) or math.random(-12, 12)
        img.ZIndex = 3
        img.Parent = parent

        task.spawn(function()
            while not passwordAccepted and img.Parent do
                local dir = (math.random(0, 1) == 0) and -1 or 1
                local drift = 0.08 + math.random() * 0.08
                local yDrift = (flip and -1 or 1) * (2 + math.random() * 3)

                local moveGoal = {
                    Position = img.Position + UDim2.new(drift * dir, 0, 0, yDrift),
                    ImageTransparency = math.clamp(
                        img.ImageTransparency + (math.random() * 0.12 - 0.06),
                        0.3,
                        0.9
                    ),
                    Rotation = img.Rotation + math.random(-4, 4)
                }

                local tw = TweenService:Create(
                    img,
                    TweenInfo.new(3.5 + math.random() * 2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut),
                    moveGoal
                )
                tw:Play()
                tw.Completed:Wait()
            end
        end)
    end
end

createSmokeStrip(SmokeTop, -40, false)
createSmokeStrip(SmokeBottom, -40, true)

-- THUNDER / LIGHTNING EFFECT
local Flash = Instance.new("Frame")
Flash.Size = UDim2.new(1, 0, 1, 0)
