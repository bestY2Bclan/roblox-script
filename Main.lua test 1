        game.StarterGui:SetCore("TopbarEnabled", not v)
    end)
end)

----------------------------------------------------------------
-- FARM TAB (NEW) â€“ Farm All Players using Drag Combo + Stomp + PvP
----------------------------------------------------------------
createSectionLabel(FarmPage, "Farm All")

local farmAllEnabled = Settings.FarmAllEnabled

local function getNearestPvpOnEnemy(maxDist)
    local char = LP.Character
    local myHRP = char and char:FindFirstChild("HumanoidRootPart")
    if not myHRP then return nil end

    local nearest, bestD = nil, maxDist or 100
    for _, p in ipairs(Players:GetPlayers()) do
        if p ~= LP and p.Character then
            local c = p.Character
            if charHasPvpOn(c) then
                local hum = c:FindFirstChildOfClass("Humanoid")
                local hrp = c:FindFirstChild("HumanoidRootPart")
                if hum and hum.Health > 0 and hrp then
                    local d = (hrp.Position - myHRP.Position).Magnitude
                    if d < bestD then
                        bestD = d
                        nearest = p
                    end
                end
            end
        end
    end
    return nearest
end

local function farmAllLoop()
    while farmAllEnabled do
        -- disable manual drag combo while farming
        autoDragCombo = false
        Settings.AutoDragCombo = false
        punching = true

        local target = getNearestPvpOnEnemy(120)
        if not target then
            task.wait(0.4)
            continue
        end

        local tChar = target.Character
        local hum = tChar and tChar:FindFirstChildOfClass("Humanoid")
        local hrp = tChar and tChar:FindFirstChild("HumanoidRootPart")

        if not (tChar and hum and hum.Health > 0 and hrp and charHasPvpOn(tChar)) then
            task.wait(0.2)
            continue
        end

        -- focus this target until they die or lose PvP
        local startTime = tick()
        while farmAllEnabled and tChar and hum and hum.Health > 0 and charHasPvpOn(tChar) do
            -- tp close (reuse combo offsets)
            local myChar = LP.Character or safeChar()
            local myHRP = myChar and myChar:FindFirstChild("HumanoidRootPart")
            if myHRP and hrp then
                myHRP.CFrame = hrp.CFrame * CFrame.new(0, upOff, frontOff)
            end

            -- punch + stomp attempt
            if PunchEvent then
                pcall(function()
                    PunchEvent:FireServer(1)
                end)
            end
            tryStompOnCharacter(tChar)

            -- scale loop with hit speed
            local delay = (hitsPerSecond > 0) and (1 / hitsPerSecond) or 0.09
            delay = delay + math.random() * 0.01
            task.wait(delay)

            -- limit focus per enemy
            if tick() - startTime > 12 then
                break
            end
        end

        task.wait(0.2)
    end
    punching = false
end

createToggle(FarmPage, "Farm All Players (PvP On)", farmAllEnabled, function(v)
    farmAllEnabled = v
    Settings.FarmAllEnabled = v

    if v then
        -- disable manual drag combo while farming
        autoDragCombo = false
        Settings.AutoDragCombo = false
        punching = false
        task.spawn(farmAllLoop)
    end
end)

-- Final save
saveSettings()
